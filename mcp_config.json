{
  "_comment": "MCP Server Configuration for Sakura - Run with uvx (Python)",
  "servers": {
    "time": {
      "_comment": "Time and timezone tools",
      "type": "stdio",
      "command": ["uvx", "mcp-server-time"]
    },
    "fetch": {
      "_comment": "Fetch URLs and web content",
      "type": "stdio",
      "command": ["uvx", "mcp-server-fetch"]
    },
    "filesystem": {
      "_comment": "File system access - change root as needed",
      "type": "stdio",
      "command": ["uvx", "mcp-server-filesystem", "--root", "C:/"]
    },
    "memory": {
      "_comment": "Persistent memory store for context",
      "type": "stdio",
      "command": ["uvx", "mcp-server-memory"]
    },
    "sequential-thinking": {
      "_comment": "Dynamic problem-solving through thought sequences",
      "type": "stdio",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "codacy": {
      "_comment": "Codacy code quality analysis - requires CODACY_ACCOUNT_TOKEN env var",
      "type": "stdio",
      "command": ["npx", "-y", "@codacy/codacy-mcp"],
      "env": {
        "CODACY_ACCOUNT_TOKEN": "${CODACY_ACCOUNT_TOKEN}"
      }
    }
  },
  "_optional_servers": {
    "_comment": "Uncomment and configure these as needed",
    "brave-search": {
      "_comment": "Brave search API - requires BRAVE_API_KEY env var",
      "type": "stdio",
      "command": ["uvx", "mcp-server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "your_brave_api_key"
      }
    },
    "github": {
      "_comment": "GitHub integration - requires GITHUB_TOKEN env var",
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token"
      }
    },
    "sqlite": {
      "_comment": "SQLite database access",
      "type": "stdio",
      "command": [
        "uvx",
        "mcp-server-sqlite",
        "--db-path",
        "path/to/database.db"
      ]
    },
    "postgres": {
      "_comment": "PostgreSQL database access",
      "type": "stdio",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://localhost/mydb"
      ]
    },
    "puppeteer": {
      "_comment": "Browser automation",
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "slack": {
      "_comment": "Slack integration - requires SLACK_BOT_TOKEN and SLACK_TEAM_ID",
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "your_slack_bot_token",
        "SLACK_TEAM_ID": "your_team_id"
      }
    },
    "google-maps": {
      "_comment": "Google Maps - requires GOOGLE_MAPS_API_KEY",
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-google-maps"],
      "env": {
        "GOOGLE_MAPS_API_KEY": "your_google_maps_key"
      }
    },
    "everything-search": {
      "_comment": "Windows Everything search (requires Everything installed)",
      "type": "stdio",
      "command": ["npx", "-y", "mcp-server-everything"]
    }
  }
}
